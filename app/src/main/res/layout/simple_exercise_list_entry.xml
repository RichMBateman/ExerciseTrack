<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/sele_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sele_textview_exercise_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sele_btn_delete"
        app:layout_constraintEnd_toStartOf="@+id/sele_cb_isdailyreminder"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="exercise name" />

    <CheckBox
        android:id="@+id/sele_cb_isdailyreminder"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:enabled="false"
        android:maxLines="2"
        android:minLines="2"
        android:text="Is Daily Reminder?"
        android:textSize="10sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/sele_textview_exercise_name"
        app:layout_constraintEnd_toStartOf="@+id/sele_btn_delete" />
</android.support.constraint.ConstraintLayout>